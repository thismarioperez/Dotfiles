{{      if or .chezmoi.osRelease.id "debian" "ubuntu" -}}
# Ubuntu/Debian-specific code

sudo apt update && \
sudo apt install -y \
	bat \
	exa \
	fzf \
	git \
	nano \
	tmux \
	unzip \
	zsh

# Install/Update nvm
# install-nvm.sh.tmpl hash: {{ includeTemplate "install-nvm.sh.tmpl" . | sha256sum }}
