HISTFILE=$XDG_CONFIG_HOME/.histfile
HISTSIZE=1000
SAVEHIST=1000
bindkey -e

# add Homebrew to PATH on apple silicon
[ -f /opt/homebrew/bin/brew ] && eval "$(/opt/homebrew/bin/brew shellenv)"

zstyle :compinstall filename '/Users/mario/.zshrc'

autoload -Uz compinit
compinit

# Safely load oh-my-posh in any terminal except for apple terminal
if [ "$TERM_PROGRAM" != "Apple_Terminal" ]; then
    eval "$(oh-my-posh init zsh)"
fi

# Safely load nvm and it's completions
export NVM_DIR="$XDG_CONFIG_HOME/nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion